{% extends 'base.html.twig' %}

{% block title %}Liste des artistes{% endblock %}

{% block body %}
    <h1>Liste des artistes</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>n°</th>
                <td>{{ artiste.id }}</td>
            </tr>
            <tr>
                <th>Nom de l'artiste</th>
                <td>{{ artiste.nom }}</td>
            </tr>
            <tr>
                <th>Prenom de l'artiste</th>
                <td>{{ artiste.prenom }}</td>
            </tr>
            <tr>
                <th>Biographie en français</th>
                <td>{{ artiste.biographieFr }}</td>
            </tr>
            <tr>
                <th>Biographie en Anglais</th>
                <td>{{ artiste.biographieEn }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('artistes_index') }}">Retour à la liste</a>

    <a href="{{ path('artistes_edit', {'id': artiste.id}) }}">Modifier l'artiste</a>

    {{ include('artistes/_delete_form.html.twig') }}
{% endblock %}
