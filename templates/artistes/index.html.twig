{% extends 'base.html.twig' %}

{% block title %}Artistes{% endblock %}

{% block body %}
    {% include 'partials/_navbarGestion.html.twig' %}
    <div class="container pt-5">

        <h1 class="script text-center text-warning">Artistes</h1>
        <div class="text-center">
            <a class="btn btn-dark text-center mb-3" href="{{ path('gestion') }}">Retour</a>
        </div>
        <table class="mx-auto table table-bordered ">
            <thead>
                <tr class="text-center">
                    <th scope="col">Nom</th>
                    <th scope="col">Prénom</th>
                    <th scope="col">Biographie Anglais</th>
                    <th scope="col">Biographie Français</th>
                    <th colspan="2"><a href="{{path('artistes_new')}}" class="btn btn-info">Ajouter un Artiste</a></th>
                </tr>
            </thead>
            {% for artiste in artistes %}
            <tr class="text-center">
                <td>{{ artiste.nom|slice(0, 50) }}</td>
                <td>{{ artiste.prenom|slice(0, 50) }}</td>
                <td>{{ artiste.biographieEn|slice(0, 50) }}</td>
                <td>{{ artiste.biographieFr|slice(0, 50)}}</td>
                    <td><a href="{{ path('artistes_edit', {'id': artiste.id}) }}" class="btn btn-warning">Modifier</a></td>
                    <td>{{ include('artistes/_delete_form.html.twig') }}</td>
            </tr>   
            {% endfor %}
{% endblock %}
