{% extends 'base.html.twig' %}
{% block title %}S'inscrire{% endblock %}

{% block body %}
<div class="container pt-4 mt-4 mb-4">
    <h1>Inscrire un collaborateur</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.nom) }}
        {{ form_row(registrationForm.prenom) }}
        {{ form_row(registrationForm.tel) }}
        {{ form_row(registrationForm.service) }}
        {{ form_row(registrationForm.roles) }}
        {{ form_row(registrationForm.Password) }}
        {{ form_row(registrationForm.Confirmation) }}
        <div class="row justify-content-around">
            <div class="col-4">
                <button class="btn btn-primary">Enregistrer</button>
            </div>
            <div class="col-4">
                <a class="btn btn-dark" href="{{ path('collaborateur') }}">Retour</a> 
            </div>
       
        </div>


    {{ form_end(registrationForm) }}

    </div>

{% endblock %}
