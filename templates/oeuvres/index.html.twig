{% extends 'base.html.twig' %}

{% block title %}Oeuvres index{% endblock %}

{% block body %}
    <h1>Oeuvres index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Path</th>
                <th>Livre</th>
                <th>Emplacement</th>
                <th>Description_fr</th>
                <th>Description_en</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for oeuvre in oeuvres %}
            <tr>
                <td>{{ oeuvre.id }}</td>
                <td>{{ oeuvre.titre }}</td>
                <td>{{ oeuvre.path }}</td>
                <td>{{ oeuvre.livre ? 'Yes' : 'No' }}</td>
                <td>{{ oeuvre.emplacement }}</td>
                <td>{{ oeuvre.descriptionFr }}</td>
                <td>{{ oeuvre.descriptionEn }}</td>
                <td>{{ oeuvre.type }}</td>
                <td>
                    <a href="{{ path('oeuvres_show', {'id': oeuvre.id}) }}">show</a>
                    <a href="{{ path('oeuvres_edit', {'id': oeuvre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('oeuvres_new') }}">Create new</a>
{% endblock %}
