{% extends 'base.html.twig' %}

{% block title %}Expositions{% endblock %}

{% block body %}

{% include 'partials/_navbarGestion.html.twig' %}
    <div class="container pt-5">

        <h1 class="script text-center text-warning pb-2">Expositions</h1>
        <div class="text-center">
            <a class="btn btn-dark text-center mb-3" href="{{ path('gestion') }}">Retour</a>
        </div>
        <table class="mx-auto table table-bordered ">
            <thead>
                <tr class="text-center">
                    <th scope="col">Nom</th>
                    <th scope="col">Date de DÃ©but</th>
                    <th scope="col">Date de Fin</th>
                    <th scope="col">Nombre de vues</th>
                    <th scope="col">Golden Path</th>
                    <th colspan="3"><a href="{{path('expositions_new')}}" class="btn btn-success">Nouvelle exposition</a></th>
                </tr>
            </thead>
            {% for exposition in expositions %}
            <tr class="text-center">
                <td>{{ exposition.nom|slice(0, 50) }}</td>
                <td>{{ exposition.dateDebut ? exposition.dateDebut|date('d m Y') : '' }}</td>
                <td>{{ exposition.dateFin ? exposition.dateFin|date('d m Y') : '' }}</td>
                <td>{{ exposition.nbVues }}</td>
                <td>{{ exposition.ordre }}</td>
                    <td><a href="{{ path('expositions_edit', {'id': exposition.id}) }}" class="btn btn-warning">Modifier</a></td>
                    <td><a href="{{ path('expositions_show', {'id': exposition.id}) }}" class="btn btn-info">Voir</a></td>
                    <td>{{ include('expositions/_delete_form.html.twig') }}</td>
            </tr>
                
            {% endfor %}
        </table>
    </div>
{% endblock %}
